abi <abi/3.0>,

include <tunables/global>

@{electrum_exec_path} = /{usr/,usr/local/,*/*/.local/,}bin/electrum-nmc

profile electrum-nmc @{electrum_exec_path} {
  include <abstractions/electrum-nmc>

  @{electrum_exec_path} mr,
  owner @{HOME}/.electrum-nmc/{**,} rwlk,
  owner @{HOME}/.local/{**,} mrw,

}
